    <main id="project-list">
        <!-- Projetos serão inseridos dinamicamente -->
    </main>

    <script>
        // Lista de projetos existentes no repositório
        const projetos = [
            {
                nome: "Calculadora Simples",
                descricao: "Projeto de uma calculadora básica.",
                link: "https://github.com/lucas-castro5/projetos_academicos/blob/main/pasta_com_arquivos/calculadora%20simples"
            },
            {
                nome: "Jogo da Forca",
                descricao: "Jogo da forca implementado em Python.",
                link: "https://github.com/lucas-castro5/projetos_academicos/blob/main/pasta_com_arquivos/forca.py"
            },
            {
                nome: "Jogo de Adivinhação",
                descricao: "Jogo de adivinhação onde o jogador tenta descobrir um número secreto.",
                link: "https://github.com/lucas-castro5/projetos_academicos/blob/main/pasta_com_arquivos/jogo%20de%20adivinha%C3%A7%C3%A3o"
            }
        ];

        const container = document.getElementById("project-list");

        projetos.forEach(projeto => {
            const div = document.createElement("div");
            div.className = "project";

            div.innerHTML = `
                <h3>${projeto.nome}</h3>
                <p>${projeto.descricao}</p>
                <a href="${projeto.link}" target="_blank">Ver Projeto no GitHub</a>
            `;

            container.appendChild(div);
        });
    </script>
